generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Categoria {
  id        String @id @default(uuid())
  descricao String

  Produto Produto[]

  @@map("categoria")
}

model Produto {
  id         String  @id
  nome       String
  sku        String
  descricao  String?
  url_imagem String

  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId String

  marca   Marca  @relation(fields: [marcaId], references: [id])
  marcaId String

  @@map("produto")
}

model Marca {
  id   String @id @default(uuid())
  nome String

  Produto Produto[]

  @@map("marca")
}
