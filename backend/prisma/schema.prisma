generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model OculosSol {
  codigo           String         @id @default(uuid())
  descricao        String
  marcaOculosSol   MarcaOculosSol @relation(fields: [marcaOculosSolId], references: [id])
  marcaOculosSolId String

  @@map("oculos_sol")
}

model MarcaOculosSol {
  id        String      @id @default(uuid())
  marca     String
  OculosSol OculosSol[]

  @@map("marca_oculos_sol")
}
